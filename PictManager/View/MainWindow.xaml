<Window x:Class="PictManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:PictManager.Controls"
        Title="PictManager" Height="525" Width="715"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <!-- Row 0 -->
        
        <!-- Search -->
        <TextBox x:Name="textBox_Search" Margin="10,10,0,0" Height="23" Width="245"
                 HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"
                 KeyUp="textBox_Search_KeyUp"/>
        <Button x:Name="button_Search" Content="Search" Grid.Column="1" Margin="10,11,0,0" Width="69"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="button_Search_Click"/>
        <RadioButton x:Name="radioButton_FileName" Content="ファイル名" Margin="10,38,0,0" IsChecked="True"
                     HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton_DisplayName" Content="表示名" Margin="124,38,0,0" Visibility="Hidden"
                     HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton_Tags" Content="タグ" Margin="102,38,0,0"
                     HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Rename -->
        <Label Content="FileName" Grid.Column="2" Margin="10,49,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_FileName"  Grid.Column="2" Width="245" Height="23" Margin="10,75,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"
                 KeyUp="textBox_FileName_KeyUp"/>
        <Button x:Name="button_Rename" Content="Rename" Grid.Column="3" Margin="10,77,0,0" Width="69"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="button_Rename_Click" />
        
        <!-- Tag Set -->
        <Label Content="Tags" Grid.Column="2" Margin="10,105,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Tags" Grid.Column="2" Margin="10,131,0,0" Height="23" Width="245"
                 HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"
                 KeyUp="textBox_Tags_KeyUp"/>
        <Button x:Name="button_TagSet" Content="Tag Set" Grid.Column="3" Margin="10,132,0,0" Width="69"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="button_TagSet_Click" />

        <!-- Row 1 -->
        
        <ListView x:Name="listView_Picts" Grid.Row="1" Grid.ColumnSpan="4" Margin="10,10,10.333,10"
                  SelectionMode="Extended" ItemsSource="{Binding}" 
                  SelectionChanged="listView_Picts_SelectionChanged"
                  MouseDoubleClick="listView_Picts_MouseDoubleClick">
            <ListView.View>
                <l:ImageView />
            </ListView.View>
        </ListView>
    </Grid>
</Window>
